{
    "entryFile": "src/index.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "src/**/*Controller.ts"
    ],
    "spec": {
        "outputDirectory": "build",
        "specVersion": 3,
        "securityDefinitions": {
            "jwt": {
                "type": "jwt",
                "name": "jwt_token",
                "in": "header"
            }
        }
    },
    "routes": {
        "routesDir": "build",
        "authenticationModule": "./src/middleware/authentication.ts"
    }
}